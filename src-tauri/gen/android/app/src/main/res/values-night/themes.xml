<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.bayin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Make status bar and navigation bar transparent for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Splash screen theme (night mode) -->
    <style name="Theme.bayin.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#F34235</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.bayin</item>
    </style>
</resources>
